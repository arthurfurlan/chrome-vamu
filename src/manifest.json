{
    "manifest_version": 2,

    "name": "va.mu",
    "description": "Lets you shorten an URL using the http://va.mu",
    "version": "0.3.2",
    
    "permissions": [
        "tabs",
        "http://va.mu/",
        "clipboardWrite"
    ],

    "icons": {  "16": "icon16.png",
                "48": "icon48.png",
                "128": "icon128.png" },
    
    "browser_action": {
        "default_icon": "icon19.png",
        "default_popup": "popup.html"
    },

    "background": {
        "page": "background.html"
    },

    "options_page": "options.html"
    
}
